<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFDemo"
        Title="MainWindow" Height="400" Width="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Margin="5" Height="50" x:Name="FireworksDemo" Click="fireworksDemo_Click" Content="烟火演示" />
            <Button Margin="5" Height="50" x:Name="CircleDemo" Click="circlrDemo_Click"  Content="圆周运动演示" />
            <Button Margin="5" Height="50" x:Name="ElasticDemo" Click="elasticDemo_Click" Content="弹性材料演示" />
            <Button Margin="5" Height="50" x:Name="FluidDemo" Click="fluidDemo_Click" Content="流体演示" />
            <Button Margin="5" Height="50" x:Name="ContactDemo" Click="contactDemo_Click" Content="简单碰撞演示" />
            <Button Margin="5" Height="50" x:Name="RobDemo" Click="RobDemo_Click" Content="连杆演示" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>