<Window x:Class="WPFDemo.RobDemo.Rob"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo.RobDemo"
        mc:Ignorable="d"
        Title="Rob" Height="450" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Margin="3" BorderBrush="SteelBlue" BorderThickness="1" Height="400" Width="500">
            <Image x:Name="ImageSurface" Width="500" Height="400" 
                   MouseDown="ImageSurface_OnMouseDown" 
                   MouseUp="ImageSurface_OnMouseUp" 
                   MouseMove="ImageSurface_OnMouseMove"
                   ScrollViewer.VerticalScrollBarVisibility="Disabled" />
        </Border>
    </Grid>
</Window>
