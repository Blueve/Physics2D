<Window x:Class="WPFDemo.ElasticDemo.Elastic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Elastic" Height="750" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Margin="3" BorderBrush="SteelBlue" BorderThickness="1" Height="700" Width="500">
            <Image x:Name="ImageSurface" Width="500" Height="700" MouseDown="imageSurface_MouseDown" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
        </Border>
    </Grid>
</Window>